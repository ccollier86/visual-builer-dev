{
  "name": "documentation-microservice",
  "version": "1.0.0",
  "description": "Documentation microservice built with Elysia and Bun",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "test:pipeline": "bun run src/test-pipeline.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/static": "^1.4.6",
    "@elysiajs/swagger": "^1.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "elysia": "^1.4.15",
    "openai": "^6.8.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "bun-types": "latest",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.1"
  }
}
